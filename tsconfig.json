{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "strict": false,
    "target": "es6",
    "module": "ES2020",
    "lib": ["dom", "es6", "es5", "es2017", "esnext.asynciterable"],
    "sourceMap": false,
    "moduleResolution": "node",
    "types": ["element-plus/global"],
    "paths": {
      "@src/*": ["./src/*"],
      "@apps/*": ["./src/modules/*"],
      "@models/*": ["./src/models/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@public/*": ["./public/*"]
    },
    "declaration": true,
    "rootDir": "./src",
    "outDir": "dist",
    "jsx": "preserve"
  },
  "exclude": ["dist"],
  "include": ["src"]
}
